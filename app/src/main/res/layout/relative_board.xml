<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/myboard_btn"
        style="@style/relative_btn"
        android:layout_width="170dp"
        android:text="내 게시판"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/write_btn"
        style="@style/relative_btn"
        android:layout_width="110dp"
        android:text="글쓰기"
        app:layout_constraintLeft_toRightOf="@id/myboard_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/alarm_btn"
        style="@style/relative_btn"
        android:layout_width="110dp"
        android:text="알람"
        app:layout_constraintLeft_toRightOf="@id/write_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        style="@style/view_style"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/write_btn" />

    <Spinner
        android:id="@+id/search_spinner"
        style="@style/spinner_style"
        android:layout_margin="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/line" />

    <EditText
        android:id="@+id/search_edit"
        style="@style/edit_style"
        app:layout_constraintLeft_toRightOf="@+id/search_spinner"
        app:layout_constraintRight_toLeftOf="@+id/search_btn"
        app:layout_constraintTop_toTopOf="@id/line" />

    <Button
        android:id="@+id/search_btn"
        style="@style/relative_btn"
        android:layout_width="80dp"
        android:layout_margin="7dp"
        android:text="검색"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/line"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="100dp" />

    <TextView
        android:id="@+id/tv1"
        style="@style/text_style"
        android:text="등록된 게시글"
        app:layout_constraintTop_toTopOf="@id/guideline"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TableLayout
        android:id="@+id/tm_boardTop"
        style="@style/table_style"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1">
        <TableRow
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                style="@style/table_text_style"
                android:text="매칭현황" />
            <TextView
                style="@style/table_text_style"
                android:layout_weight="4"
                android:text="제목" />
            <TextView
                style="@style/table_text_style"
                android:text="작성일자" />
            <TextView
                style="@style/table_text_style"
                android:text="작성자" />
        </TableRow>
    </TableLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tmRecyclerV"
            style="@style/recycler_style"
            app:layout_constraintTop_toBottomOf="@id/tm_boardTop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>