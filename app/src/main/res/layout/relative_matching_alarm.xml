<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        style="@style/alarm_text_style"
        app:layout_constraintTop_toBottomOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="지역"
        android:id="@+id/place_title"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/place_textView"
        style="@style/edit_style"
        app:layout_constraintTop_toBottomOf="@+id/place_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/relative_btn2"
        app:layout_constraintTop_toBottomOf="@+id/place_textView"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:text="지역설정"
        android:textSize="20dp"
        android:id="@+id/place_btn" />

    <TextView
        style="@style/alarm_text_style"
        app:layout_constraintTop_toBottomOf="@id/place_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="실력"
        android:id="@+id/ability_title" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ability_radio"
        app:layout_constraintTop_toBottomOf="@+id/ability_title"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <RadioButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio1"
            android:text="상" />
        <RadioButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio2"
            android:text="중" />
        <RadioButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio3"
            android:text="하" />
    </RadioGroup>

    <TextView
        style="@style/alarm_text_style"
        app:layout_constraintTop_toBottomOf="@id/ability_radio"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="시간"
        android:id="@+id/time_title" />


    <Spinner
        android:id="@+id/startTime_spinner"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        style="@style/relative_writing_spinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_title" />


    <Spinner
        android:id="@+id/endTime_spinner"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        style="@style/relative_writing_spinner"
        app:layout_constraintLeft_toRightOf="@+id/startTime_spinner"
        app:layout_constraintTop_toBottomOf="@+id/time_title" />

    <TextView
        style="@style/alarm_text_style"
        app:layout_constraintTop_toBottomOf="@+id/startTime_spinner"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="인원"
        android:id="@+id/person_title"/>

    <EditText
        android:inputType="number"
        style="@style/edit_style"
        android:id="@+id/person_edit"
        android:layout_width="100dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/person_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/confirm_btn"
        style="@style/relative_btn"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/person_edit"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="40dp"
        android:text="설정확인" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="60dp" />

</androidx.constraintlayout.widget.ConstraintLayout>