<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <Button
        android:id="@+id/tm_btnList"
        style="@style/relative_btn"
        android:layout_width="80dp"
        android:layout_margin="10dp"
        android:text="목록"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="70dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit"
        app:layout_constraintTop_toBottomOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/tableL">
        <TableRow
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                style="@style/table_text_style"
                android:background="@drawable/border_background"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="지역" />
            <TextView
                style="@style/table_text_style2"
                android:id="@+id/rb_regionTv" />
        </TableRow>
        <TableRow
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:background="@drawable/border_background"
                style="@style/table_text_style"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="날짜" />
            <TextView
                style="@style/table_text_style2"
                android:id="@+id/rb_dateTv" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="@drawable/border_background"
                style="@style/table_text_style"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="인원" />
            <TextView
                style="@style/table_text_style2"
                android:id="@+id/rb_numTv" />
        </TableRow>
        <TableRow
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:background="@drawable/border_background"
                style="@style/table_text_style"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="실력" />
            <TextView
                style="@style/table_text_style2"
                android:id="@+id/rb_abliTv" />
        </TableRow>
    </TableLayout>

    <TextView
        style="@style/relative_writing_tv2"
        android:id="@+id/tm_con"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tableL"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        style="@style/text_style"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tm_con"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="댓글"
        android:layout_height="30dp"
        android:id="@+id/tv1" />

        <androidx.recyclerview.widget.RecyclerView
            style="@style/recycler_style"
            android:id="@+id/tmRecyclerV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        style="@style/edit_style"
        android:layout_width="300dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/reply_edt"
        android:hint="댓글을 입력하세요" />

    <Button
        style="@style/relative_btn"
        android:layout_width="90dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="등록"
        android:id="@+id/btnReply" />
</androidx.constraintlayout.widget.ConstraintLayout>