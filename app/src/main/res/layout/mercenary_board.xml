<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/search_spinner"
        style="@style/spinner_style"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/search_edit"
        style="@style/edit_style"
        android:padding="10dp"
        app:layout_constraintLeft_toRightOf="@+id/search_spinner"
        app:layout_constraintRight_toLeftOf="@+id/search_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        style="@style/view_style"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_spinner" />

    <Button
        android:id="@+id/search_btn"
        style="@style/relative_btn"
        android:layout_width="80dp"
        android:layout_margin="7dp"
        android:text="검색"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        style="@style/radio_button_style"
        android:id="@+id/type_radio"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        app:layout_constraintLeft_toLeftOf="parent">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio1"
            android:text="용병" />
        <RadioButton
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio2"
            android:text="팀" />
    </RadioGroup>

    <Button
        android:id="@+id/write_btn"
        style="@style/relative_btn"
        android:layout_width="80dp"
        android:text="글쓰기"
        app:layout_constraintRight_toLeftOf="@+id/alarm_btn"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <Button
        android:id="@+id/alarm_btn"
        style="@style/relative_btn"
        android:layout_width="80dp"
        android:text="알림"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <TextView
        android:id="@+id/tv1"
        style="@style/text_style"
        android:layout_marginTop="23dp"
        android:text="등록된 게시글"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_spinner" />

    <TableLayout
        android:id="@+id/relativeBoard_title"
        style="@style/table_style"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/write_btn">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                style="@style/table_text_style"
                android:layout_weight="0.5"
                android:text="매칭현황" />

            <TextView
                style="@style/table_text_style"
                android:layout_weight="3"
                android:text="제목" />

            <TextView
                style="@style/table_text_style"
                android:layout_weight="0.5"
                android:text="매칭일자" />

            <TextView
                style="@style/table_text_style"
                android:layout_weight="0.5"
                android:text="작성자" />
        </TableRow>
    </TableLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="93dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/relativeBoard_Recycler"
        style="@style/recycler_style"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeBoard_title" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/BottomNavigation"
        style="@style/BottomNavigation_style"
        app:itemIconSize="30dp"
        app:itemBackground="@color/title"
        app:itemIconTint="@drawable/bottomnavi_item_color"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu" />

</androidx.constraintlayout.widget.ConstraintLayout>