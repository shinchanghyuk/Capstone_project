<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:background="#f9f8f6">

    <TextView
        android:id="@+id/tm_item1"
        style="@style/recycler_text_style"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tm_item2"
        style="@style/recycler_text_style"
        android:layout_marginLeft="7dp"
        app:layout_constraintLeft_toRightOf="@+id/tm_item1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tm_item3"
        style="@style/recycler_text_style"
        android:layout_marginLeft="22dp"
        app:layout_constraintLeft_toRightOf="@+id/tm_item2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tm_item4"
        style="@style/recycler_text_style"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toRightOf="@id/tm_item3"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>