<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#f2f2f2">

    <TextView
        android:id="@+id/recommentUser"
        style="@style/recycler_text_style"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_margin="5dp"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recommentTime"
        style="@style/recycler_text_style"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/recommentUser"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recommentTxt"
        style="@style/recycler_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:gravity="center_vertical"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommentUser"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>