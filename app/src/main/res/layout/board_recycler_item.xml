<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="5dp"
    android:background="#f2f2f2">

    <TextView
        android:id="@+id/recycler_item1"
        style="@style/recycler_text_style"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/recycler_item2"
        style="@style/recycler_text_style"
        android:layout_width="200dp"
        android:maxLength="20"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/recycler_item1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/recycler_item3"
        style="@style/recycler_text_style"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/recycler_item2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/recycler_item4"
        style="@style/recycler_text_style"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>