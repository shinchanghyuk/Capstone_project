<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtPlace"
        style="@style/relative_writing_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPlace"
        style="@style/relative_btn2"
        android:text="지역 설정"
        app:layout_constraintLeft_toRightOf="@+id/txtPlace"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDate"
        style="@style/relative_writing_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPlace" />

    <Button
        android:id="@+id/btnDate"
        style="@style/relative_btn2"
        android:text="날짜 설정"
        app:layout_constraintLeft_toRightOf="@+id/txtDate"
        app:layout_constraintTop_toBottomOf="@+id/btnPlace" />

    <EditText
        android:id="@+id/Time"
        style="@style/relative_writing_edit"
        android:text="시작 시간"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDate" />

    <EditText
        android:id="@+id/Time2"
        style="@style/relative_writing_edit"
        android:text=" 끝 시간"
        app:layout_constraintLeft_toRightOf="@+id/Time"
        app:layout_constraintTop_toBottomOf="@+id/btnDate" />

    <Spinner
        android:id="@+id/spin"
        android:layout_width="65dp"
        android:layout_height="35dp"
        style="@style/relative_writing_edit"
        android:entries="@array/my_array"
        android:padding="1dp"
        android:spinnerMode="dialog"
        app:layout_constraintLeft_toRightOf="@+id/Time2"
        app:layout_constraintTop_toBottomOf="@+id/btnDate" />

    <EditText
        android:id="@+id/spin2"
        android:layout_width="75dp"
        android:layout_height="35dp"
        style="@style/relative_writing_edit"
        android:hint="인원 수"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/spin"
        app:layout_constraintTop_toBottomOf="@+id/btnDate" />

    <EditText
        android:id="@+id/edtTitle"
        android:layout_width="390dp"
        style="@style/relative_writing_edit"
        android:editable="true"
        android:hint="제목을 입력해주세요"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin2" />

    <EditText
        android:id="@+id/edtMain"
        style="@style/relative_writing_edit"
        android:layout_width="390dp"
        android:editable="true"
        android:layout_height="320dp"
        android:hint="본문을 입력해주세요"
        app:layout_constraintLeft_toLeftOf="parent"
        android:privateImeOptions="defaultInputmode=korean"
        app:layout_constraintTop_toBottomOf="@+id/edtTitle" />

    <Button
        android:id="@+id/btnUp"
        style="@style/relative_btn"
        android:layout_width="100dp"
        android:layout_margin="12dp"
        android:text="확인"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtMain" />

</androidx.constraintlayout.widget.ConstraintLayout>